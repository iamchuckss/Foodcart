<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/teal_grey_border_bottom"
        android:id="@+id/relLayout1">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Quantity"
            android:fontFamily="@font/montserrat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

    </RelativeLayout>


    <EditText
        android:id="@+id/input_quantity"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/white_grey_border"
        android:layout_below="@id/relLayout1"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorBasicText"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_below="@+id/input_quantity"
        android:text="Done"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:background="@color/darkTeal"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:layout_below="@+id/input_quantity"
        android:text="Cancel"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:background="@color/grey"
        android:textColor="@color/colorBasicText"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="25dp"/>

</RelativeLayout>
