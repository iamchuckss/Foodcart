<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iamchuckss.foodcart">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.iamchuckss.foodcart.library.LibraryActivity"></activity>
        <activity android:name="com.iamchuckss.foodcart.plan.PlanActivity"></activity>
        <activity android:name="com.iamchuckss.foodcart.login.SignupActivity"></activity>
        <activity android:name="com.iamchuckss.foodcart.login.LoginActivity"></activity>
        <activity android:name="com.iamchuckss.foodcart.library.AddRecipeActivity"></activity>
        <activity android:name="com.iamchuckss.foodcart.library.SelectIngredientsActivity"></activity>
        <activity android:name="com.iamchuckss.foodcart.plan.SelectRecipeActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>